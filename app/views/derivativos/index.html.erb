<p id="notice"><%= notice %></p>

<h1>Derivativos</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Strike</th>
      <th>Tipo</th>
      <th>Vencimento</th>
      <th>Estado</th>
      <th>Ativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @derivativos.each do |derivativo| %>
      <tr>
        <td><%= derivativo.codigo %></td>
        <td><%= derivativo.strike %></td>
        <td><%= derivativo.tipo %></td>
        <td><%= derivativo.vencimento %></td>
        <td><%= derivativo.ativo %></td>
        <td><%= link_to 'Show', derivativo %></td>
        <td><%= link_to 'Edit', edit_derivativo_path(derivativo) %></td>
        <td><%= link_to 'Destroy', derivativo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Derivativo', new_derivativo_path %>

<div class="float-right"><%= link_to new_derivativo_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; Novo Derivativo
	</button><% end %>
</div>
<h3 class="h3-custom" id="minhas-paginas">
	<em class="fa fa-usd text-success"></em> &nbsp; Derivativos
</h3>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Strike</th>
      <th>Tipo</th>
      <th>Vencimento</th>
      <th>Vencimento</th>
      <th>Ativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @derivativos.each do |derivativo| %>
      <tr>
        <td><%= derivativo.codigo %></td>
        <td>R$ <%= derivativo.strike %></td>
        <td><%= derivativo.tipo %></td>
        <td><%= derivativo.vencimento.data.strftime("%d/%m/%Y") %></td>
        <td><%= derivativo.ativo.ticker %></td>
        <td><%= link_to 'Show', derivativo %></td>
        <td><%= link_to 'Edit', edit_derivativo_path(derivativo) %></td>
        <td><%= link_to 'Destroy', derivativo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

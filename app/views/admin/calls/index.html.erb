<div class="float-right"><%= link_to new_admin_call_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; Novo 
	</button><% end %>
</div>
<h3 class="h3-custom mb-4" id="minhas-paginas">
	<em class="fa fa-vcard-o text-success"></em> &nbsp; calls
</h3>
<div class="table-responsive mt-2">
    <table id="" class="display table table-striped w-100" cellspacing="0">
      <thead>
        <tr>
          <th>ticker</th>
          <th>Preço</th>
          <th>Strike</th>
          <th>Vencimento</th>
          <th>Desabilitado?</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @calls.where(:is_disable => false).each do |call| %>
          <tr>
            <td><%= call.ticker %></td>
            <td><%= call.price %></td>
            <td><%= call.strike %></td>
            <td><%= call.expiration.title %></td>
            <td <% if call.is_disable %> class="text-primary" <% end %> ><%= call.is_disable %></td>
            <td> <%= link_to 'Edit', edit_admin_call_path(call.id) %> | <%= link_to 'Destroy', admin_call_path(call.id), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>


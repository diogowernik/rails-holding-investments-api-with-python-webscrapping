<div class="float-right"><%= link_to new_admin_good_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; Novo 
	</button><% end %>
</div>
<h3 class="h3-custom mb-4" id="minhas-paginas">
	<em class="fa fa-vcard-o text-success"></em> &nbsp; Ações
</h3>
<div class="table-responsive mt-2">
    <table id="" class="display table table-striped w-100" cellspacing="0">
      <thead>
        <tr>
          <th>ticker</th>
          <th>Preço</th>
          <th>title</th>
          <th>Url</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @goods.each do |good| %>
          <tr>
            <td><%= good.ticker %></td>
            <td><%= good.price %></td>
            <td><%= good.title %></td>
            <td><%= good.slug %></td>  
            <td> <%= link_to 'Edit', edit_admin_good_path(good.id) %> | <%= link_to 'Destroy', admin_good_path(good.id), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>


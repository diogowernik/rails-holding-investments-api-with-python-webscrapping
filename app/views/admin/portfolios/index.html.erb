<div class="float-right"><%= link_to new_admin_portfolio_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; Novo 
	</button><% end %>
</div>
<h3 class="h3-custom mb-4" id="minhas-paginas">
	<em class="fa fa-vcard-o text-success"></em> &nbsp; Portfolios
</h3>
<div class="table-responsive mt-2">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>title</th>
          <th>Url</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @portfolios.each do |portfolio| %>
          <tr>
            <td><%= portfolio.title %></td>
            <td><%= portfolio.slug %></td>
            <td> <%= link_to 'Edit', edit_admin_portfolio_path(portfolio.id) %> | <%= link_to 'Destroy', admin_portfolio_path(portfolio.id), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>


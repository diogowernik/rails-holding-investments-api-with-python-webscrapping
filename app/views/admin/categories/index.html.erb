<div class="float-right"><%= link_to new_admin_category_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; novo 
	</button><% end %>
</div>
<h3 class="h3-custom mb-4" id="minhas-paginas">
	<em class="fa fa-vcard-o text-success"></em> &nbsp; Categorias de Investimentos
</h3>
<div class="table-responsive mt-2">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Url</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.title %></td>
            <td><%= category.slug %></td>
            <td> <%= link_to 'Edit', edit_admin_category_path(category.id) %> | <%= link_to 'Destroy', admin_category_path(category.id), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>


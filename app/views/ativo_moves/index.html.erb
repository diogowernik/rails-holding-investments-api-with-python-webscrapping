<p id="notice"><%= notice %></p>

<h1>Ativo Moves</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Carteira</th>
      <th>Valor</th>
      <th>Data</th>
      <th>Quantidade</th>
      <th>Movimento</th>
      <th>Tipo</th>
      <th>Ativo</th>
      <th>Investimento</th>
      <th>Corretora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ativo_moves.each do |ativo_move| %>
      <tr>
        <td><%= ativo_move.codigo %></td>
        <td><%= ativo_move.carteira %></td>
        <td><%= ativo_move.valor %></td>
        <td><%= ativo_move.data %></td>
        <td><%= ativo_move.quantidade %></td>
        <td><%= ativo_move.movimento %></td>
        <td><%= ativo_move.tipo %></td>
        <td><%= ativo_move.ativo %></td>
        <td><%= ativo_move.investimento %></td>
        <td><%= ativo_move.corretora %></td>
        <td><%= link_to 'Show', ativo_move %></td>
        <td><%= link_to 'Edit', edit_ativo_move_path(ativo_move) %></td>
        <td><%= link_to 'Destroy', ativo_move, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


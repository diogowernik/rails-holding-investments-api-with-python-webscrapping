<div class="float-right"><%= link_to new_vencimento_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; Novo Vencimento
	</button><% end %>
</div>
<h3 class="h3-custom" id="minhas-paginas">
	<em class="fa fa-usd text-success"></em> &nbsp; Vencimentos
</h3>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vencimentos.each do |vencimento| %>
      <tr>
        <td><%= vencimento.data.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Show', vencimento %></td>
        <td><%= link_to 'Edit', edit_vencimento_path(vencimento) %></td>
        <td><%= link_to 'Destroy', vencimento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

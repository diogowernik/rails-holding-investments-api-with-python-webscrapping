<%= render partial: "carteiras/navbar" %>

<h3 class="h3-custom" id="minhas-paginas">
	<em class="fa fa-usd text-success"></em><em class="fa fa-usd text-success"></em><em class="fa fa-usd text-success"></em> &nbsp; Radar Calls
</h3>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover" id="DerivaMoveTable">
          <thead>
            <tr class="header">
                <th>Código</th>
                <th>Vencimento</th>
                <th>Yield Sintético</th>
                <th>Prêmio</th>
                <th>Prêmio hj</th>
                <th>Prêmio desejado</th>
                <th>Quant</th>
                <th>Strike</th>
                <th>Exercicio</th>
                <th>Cotação</th>
                <th>Strike / Cotação</th>
                <th>Exercicio / Cotação</th>
                <th colspan="2"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @calls_abertas.where(:carteira_id => @carteira.id).each do |dm| %>
            <tr>
                <td><%= dm.codigo %></td>
                <td><%= dm.vencimento.data.strftime("%d/%m/%Y") %></td>
                <td><%= number_to_percentage(yield_sintetico(dm), precision: 2) %></td>
                <td class="<%= cor_premio(dm)%>"><%= number_with_delimiter(dm.valor, delimiter: '.', separator: ',') %></td>
                <td><%= dm.valor_hoje %></td>
                <td><%= number_to_currency(dm.strike * 0.012, precision: 2, unit: "", separator: ",", delimiter: ".", strip_insignificant_zeros: true) %></td>
                <td><%= dm.quantidade %></td>
                <td><%= number_with_delimiter(dm.strike, delimiter: '.', separator: ',')  %></td>
                <td><%= number_with_delimiter(exercicio(dm), delimiter: '.', separator: ',')  %></td>
                <td><%= number_to_currency(dm.ativo.valor_atual, precision: 2, unit: "", separator: ",", delimiter: ".", strip_insignificant_zeros: true) %></td>
                <td class="<%= cor_strike_cotacao(dm)%>"> <%= number_to_percentage(strike_cotacao(dm), precision: 2) %></td>
                <td class="<%= cor_exercicio_cotacao(dm)%>"> <%=  number_to_percentage(exercicio_cotacao(dm), precision: 2) %> </td>
                <td><%= link_to 'E', edit_deriva_move_path(dm) %></td>
                <td><%= link_to 'D', dm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                
              </tr>
            <% end %>
          </tbody>
    </table>
</div>
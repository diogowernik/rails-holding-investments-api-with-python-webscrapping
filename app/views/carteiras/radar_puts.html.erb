<%= render partial: "carteiras/navbar" %>

<h3 class="h3-custom" id="minhas-paginas">
	<em class="fa fa-usd text-success"></em><em class="fa fa-usd text-success"></em><em class="fa fa-usd text-success"></em> &nbsp; Radar Puts
</h3>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover" id="DerivaMoveTable">
          <thead>
            <tr class="header">
                <th>Ativo</th>
                <th>Código</th>
                <th>Vencimento</th>
                <th>Meu Prêmio</th>
                <th>Prêmio Hoje</th>
                <th>Prêmio Desejado</th>
                <th>Quant</th>
                <th>Strike</th>
                <th>Exercicio</th>
                <th>Cotação</th>
                <th>Cotação/Strike</th>
                <th>Cotação/Exercicio</th>
            </tr>
          </thead>
        
          <tbody>
            <% @puts_abertas.where(:carteira_id => @carteira.id).each do |dm| %>
            <tr>
                <td><%= dm.ativo.ticker %></td>
                <td><%= dm.codigo %></td>
                <td><%= dm.vencimento.data.strftime("%d/%m/%Y") %></td>
                <td class="<%= cor_premio(dm)%>"><%= number_with_delimiter(dm.valor, delimiter: '.', separator: ',') %></td>
                <td></td>
                <td><%= number_to_currency(dm.strike * 0.012, precision: 2, unit: "", separator: ",", delimiter: ".", strip_insignificant_zeros: true) %></td>
                <td><%= dm.quantidade %></td>
                <td><%= number_with_delimiter(dm.strike, delimiter: '.', separator: ',')  %></td>
                <td><%= number_with_delimiter(exercicio(dm), delimiter: '.', separator: ',')  %></td>
                <td><%= number_to_currency(dm.ativo.valor_atual, precision: 2, unit: "", separator: ",", delimiter: ".", strip_insignificant_zeros: true) %></td>
                <td class="<%= cor_cotacao_strike(dm)%>"> <%= number_to_percentage(cotacao_strike(dm), precision: 2) %></td>
                <td class="<%= cor_cotacao_exercicio(dm)%>"> <%=  number_to_percentage(cotacao_exercicio(dm), precision: 2) %> </td>
              </tr>
            <% end %>
          </tbody>
    </table>
</div>


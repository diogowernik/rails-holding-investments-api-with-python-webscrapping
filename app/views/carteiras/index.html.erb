<p id="notice"><%= notice %></p>

<h1>Carteiras</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carteiras.each do |carteira| %>
      <tr>
        <td><%= carteira.nome %></td>
        <td><%= carteira.user %></td>
        <td><%= link_to 'Show', carteira %></td>
        <td><%= link_to 'Edit', edit_carteira_path(carteira) %></td>
        <td><%= link_to 'Destroy', carteira, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Carteira', new_carteira_path %>

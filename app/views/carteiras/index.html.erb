<div class="float-right"><%= link_to new_carteira_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; Nova Carteira
	</button><% end %>
</div>
<h3 class="h3-custom" id="minhas-paginas">
	<em class="fa fa-vcard-o text-success"></em> &nbsp; Carteiras
</h3>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th class="text-center">#</th>
				<th>   Carteira</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody><% @carteiras.each do |carteira| %>
			<tr>
				<td class="text-center"><%= carteira.id %>
				</td>
				<td>
					<%= link_to carteira do %><%= carteira.nome %><% end %>
					
				</td>
				<td class="text-center"><%= link_to 'Editar', edit_carteira_path(carteira) %>
				</td>
				<td class="text-center"><%= link_to 'Deletar', carteira, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
			</tr><% end %>
		</tbody>
	</table>
</div>




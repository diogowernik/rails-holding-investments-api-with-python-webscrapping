<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="mt-5">Criptomoedas do Portfolio</h4>
                <table id="" class="display table table-striped table-bordered w-100" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ticker</th>
                            <th>Qnt</th>
                            <th>Pre√ßo medio</th>
                            <th>Custo Total</th>
                            <th>Dividendos</th>
                            <th>Trade</th>
                            <th>Total Hoje</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @portfolio_criptos.each do |portfolio_cripto| %>
                        <tr>
                            <td><%= portfolio_cripto.cripto.ticker %></td>
                            <td><%= number_with_precision(portfolio_cripto.shares_amount, precision: 4) %></td>
                            <td><%= number_with_precision(portfolio_cripto.share_cost, precision: 4, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_cripto.total_cost, precision: 4, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_cripto.dividends_profit, precision: 4, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_cripto.trade_profit, precision: 4, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_cripto.total_today, precision: 4, separator: ",", delimiter: ".") %></td>
                            <td><%= link_to 'E', edit_portfolio_cripto_path(portfolio_cripto) %> | <%= link_to 'D', portfolio_cripto_path(portfolio_cripto), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
        </div>
    </div>
</div>
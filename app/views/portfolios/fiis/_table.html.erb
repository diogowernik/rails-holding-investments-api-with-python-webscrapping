<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="mt-1">Fundos Imobiliários do Portfolio</h4>
                <table id="" class="display table table-striped table-bordered w-100" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ticker</th>
                            <th>Qnt</th>
                            <th>Cotação</th>
                            <th>Preço medio</th>
                            <th>Custo Total</th>
                            <th>Dividendos</th>
                            <th>Trade</th>
                            <th>Total Hoje</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @portfolio_fiis.each do |portfolio_fii| %>
                        <tr>
                            <td><%= portfolio_fii.fii.ticker %></td>
                            <td><%= number_with_precision(portfolio_fii.shares_amount, precision: 0) %></td>
                            <td><%= number_with_precision(portfolio_fii.fii.price, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_fii.share_cost, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_fii.total_cost, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_fii.dividends_profit, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_fii.trade_profit, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_fii.total_today, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td><%= link_to 'E', edit_portfolio_fii_path(portfolio_fii) %> | <%= link_to 'D', portfolio_fii_path(portfolio_fii), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
        </div>
    </div>
</div>



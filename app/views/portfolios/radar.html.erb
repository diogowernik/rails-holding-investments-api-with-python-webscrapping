                <thead>
                    <tr>
                        <th>Ticker</th>
                        <th>Preço hoje</th>
                    </tr>
                </thead>
                <tbody>
                    <% @criptos.each do |cripto| %>
                    <tr>
                        <td><%= cripto.ticker %></td>
                        <td><%= number_to_currency(cripto.price, unit: "R$ ", separator: ",", delimiter: ".", strip_insignificant_zeros: true) %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>

        </div>
    <% end %>

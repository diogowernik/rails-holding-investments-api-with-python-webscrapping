<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="mt-1">Ações do Portfolio</h4>
                <table id="" class="display table table-striped table-bordered w-100" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ticker</th>
                            <th>Qnt</th>
                            <th>Cotação</th>
                            <th>Preço medio</th>
                            <th>Custo Total</th>
                            <th>Dividendos</th>
                            <th>Trade</th>
                            <th>Sintéticos</th>
                            <th>Total Hoje</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @portfolio_br_stocks.each do |portfolio_br_stock| %>
                        <tr>
                            <td><%= portfolio_br_stock.br_stock.ticker %></td>
                            <td><%= number_with_precision(portfolio_br_stock.shares_amount, precision: 0) %></td>
                            <td><%= number_with_precision(portfolio_br_stock.br_stock.price, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_br_stock.share_cost, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_br_stock.total_cost, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td class="text-primary"><%= number_with_precision(portfolio_br_stock.dividend_profit, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td class="<% if portfolio_br_stock.trade_profit >= 0 %>text-primary<% else %>text-warning<% end %>"><%= number_with_precision(portfolio_br_stock.trade_profit, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td class="<% if portfolio_br_stock.derivatives_profit >= 0 %>text-primary<% else %>text-warning<% end %>"><%= number_with_precision(portfolio_br_stock.derivatives_profit, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_br_stock.total_today, precision: 2, separator: ",", delimiter: ".") %></td>
                            <td><%= link_to 'E', edit_portfolio_br_stock_path(portfolio_br_stock) %> | <%= link_to 'D', portfolio_br_stock_path(portfolio_br_stock), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
        </div>
    </div>
</div>



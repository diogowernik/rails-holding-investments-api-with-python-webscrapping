<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <div id="chart">
            </div>

        </div>
    </div>
</div>

<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="mt-1">Fundos Imobiliários do Portfolio</h4>
                <table id="" class="display table table-striped table-bordered w-100" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ticker</th>
                            <th>Qnt</th>
                            <th>Preço medio</th>
                            <th>Custo Total</th>
                            <th>Total Hoje</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @portfolio_fiis.each do |portfolio_fii| %>
                        <tr>
                            <td><%= portfolio_fii.fii.ticker %></td>
                            <td><%= number_with_precision(portfolio_fii.shares_amount, precision: 4) %></td>
                            <td><%= number_with_precision(portfolio_fii.share_cost, precision: 4, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_fii.total_cost, precision: 4, separator: ",", delimiter: ".") %></td>
                            <td><%= number_with_precision(portfolio_fii.total_today, precision: 4, separator: ",", delimiter: ".") %></td>
                            <td><%= link_to 'E', edit_portfolio_fii_path(portfolio_fii) %> | <%= link_to 'D', portfolio_fii_path(portfolio_fii), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
        </div>
    </div>
</div>


<script>
  var options = {
    series: [],
    legend: {
      show: true,
      position: 'bottom',
      horizontalAlign: 'left',
      fontSize: '14px',
      fontFamily: 'Helvetica, Arial',
      fontWeight: 400,
      width:'20px',
    },
    theme: {
      mode: 'light', 
    //   palette: 'palette6', 
    },
  dataLabels: {
    enabled: true,
    style: {
      fontSize: '12px',
    },
    formatter: function(text, op) {
      return [text, op.value.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL', minimumFractionDigits: 0, maximumFractionDigits: 0 })]
    },
    offsetY: -4
  },
  chart: {
    height: 450,
    type: 'treemap',
    toolbar: {
      show: false}
  },
  colors: [
    '#3B93A5',
    '#F7B844',
    '#38BC6A',
    '#EC3C65',
    '#748C38',
    '#8A1459',
    '#71A021',
    '#1E5D8C',
    '#421243',
    '#7F94B0',
    '#EF6537',
    '#C0ADDB'
    ],
    plotOptions: {
        treemap: {
            distributed: true,
            enableShades: false
        }
    }
};

var chart = new ApexCharts(document.querySelector("#chart"), options);
chart.render();

var url = "/api/portfolio/<%= @portfolio.id %>/fiis_chart";
$.getJSON(url, function (response) {
 chart.updateSeries(response);
});


</script>
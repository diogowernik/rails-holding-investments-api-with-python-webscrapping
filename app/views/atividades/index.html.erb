<div class="float-right"><%= link_to new_atividade_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; Nova Atividade
	</button><% end %>
</div>
<h3 class="h3-custom" id="minhas-paginas">
	<em class="fa fa-vcard-o text-success"></em> &nbsp; Atividades
</h3>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Ativo</th> 
              <th>Cod. (opç. ou subs)</th>
              <th>Tipo</th>
              <th>Movimento</th>
              <th>Quantidade</th>
              <th>Preço</th>
              <th>Data de Negociação</th>
              <th>Carteira</th>
              
              
              <th colspan="2"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @atividades.each do |atividade| %>
              <tr>
                <td><%= atividade.ativo.ticker %></td> 
                <td><%= atividade.codigo %></td>
                <td><%= atividade.tipo.nome %></td>
                <td><%= atividade.movimento %></td>
                <td><%= atividade.quantidade %></td>
                <td>R$ <%= atividade.valor %></td>
                <td><%= atividade.data_negociada %></td>
                <td><%= atividade.carteira.nome %></td>
                <td><%= link_to 'Edit', edit_atividade_path(atividade) %></td>
                <td><%= link_to 'Destroy', atividade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
	</table>
</div>



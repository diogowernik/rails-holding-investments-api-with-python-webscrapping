      if ( this.value == '4')
      {
        $("#recompra").show();
      }
      else
      {
        $("#recompra").hide();
      }
    });
});

$(document).ready(function(){
    $('#deriva_move_estado_id').on('change', function() {
      if ( this.value == '2' || this.value == '4' )

<p id="notice"><%= notice %></p>

<h1>Ativos</h1>

<table>
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ativos.each do |ativo| %>
      <tr>
        <td><%= ativo.ticker %></td>
        <td><%= ativo.tipo %></td>
        <td><%= link_to 'Show', ativo %></td>
        <td><%= link_to 'Edit', edit_ativo_path(ativo) %></td>
        <td><%= link_to 'Destroy', ativo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ativo', new_ativo_path %>

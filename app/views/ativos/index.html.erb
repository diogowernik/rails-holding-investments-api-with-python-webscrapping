<%= form_tag ativos_path, method: :get, enforce_utf8: false do %>
    <div class="row">
        <div class="col-md-2 mt-4 mb-4">
            <%= select_tag :por_tipo, options_for_select(Tipo.all.collect {|t| [t.nome, t.id]}, selected: params[:por_tipo]), prompt: 'Tipo', class: 'form-control' %>
        </div>
        <div class="col-md-2 mt-4 mb-4">
            <%= submit_tag 'Filtrar', class: 'btn btn-default', name: nil %>
        </div>
    </div>
<% end %> 

<div class="float-right"><%= link_to new_ativo_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; Novo Ativo
	</button><% end %>
</div>
<h3 class="h3-custom" id="minhas-paginas">
	<em class="fa fa-vcard-o text-success"></em> &nbsp; Ativos
</h3>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Ticker</th>
          <th>Cotação</th>
          <th colspan="2"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @ativos.each do |ativo| %>
          <tr>
            <td><%= link_to ativo do %><%= ativo.ticker %><% end %></td>
            <td><% if ativo.valor_atual.present? %><%= ativo.valor_atual %><% end %></td>
            <td><%= ativo.tipo.nome %></td>
            <td><%= link_to 'Edit', edit_ativo_path(ativo) %></td>
            <td><%= link_to 'Destroy', ativo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<div class="float-right"><%= link_to new_tipo_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; Novo Tipo
	</button><% end %>
</div>
<h3 class="h3-custom" id="minhas-paginas">
	<em class="fa fa-vcard-o text-success"></em> &nbsp; Tipos
</h3>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @tipos.each do |tipo| %>
              <tr>
                <td><%= tipo.nome %></td>
                <td><%= link_to 'Show', tipo %></td>
                <td><%= link_to 'Edit', edit_tipo_path(tipo) %></td>
                <td><%= link_to 'Destroy', tipo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
</div>

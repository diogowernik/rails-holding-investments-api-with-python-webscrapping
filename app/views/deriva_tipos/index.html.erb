<p id="notice"><%= notice %></p>

<h1>Deriva Tipos</h1>

<table>
  <thead>
    <tr>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deriva_tipos.each do |deriva_tipo| %>
      <tr>
        <td><%= deriva_tipo.tipo %></td>
        <td><%= link_to 'Show', deriva_tipo %></td>
        <td><%= link_to 'Edit', edit_deriva_tipo_path(deriva_tipo) %></td>
        <td><%= link_to 'Destroy', deriva_tipo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


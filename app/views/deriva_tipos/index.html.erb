<div class="float-right"><%= link_to new_deriva_tipo_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; Novo Tipo de Derivativo
	</button><% end %>
</div>
 
<h3 class="h3-custom" id="minhas-paginas">
	<em class="fa fa-vcard-o text-success"></em> &nbsp; Tipos de Derivativos
</h3>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deriva_tipos.each do |deriva_tipo| %>
      <tr>
        <td><%= deriva_tipo.tipo %></td>
        <td><%= link_to 'Show', deriva_tipo %></td>
        <td><%= link_to 'Edit', edit_deriva_tipo_path(deriva_tipo) %></td>
        <td><%= link_to 'Destroy', deriva_tipo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>


<div class="float-right"><%= link_to new_ativo_path do %>
	<button class="btn btn-outline-success">
		<em class="fa fa-plus-circle"></em> &nbsp; Novo Ano
	</button><% end %>
</div>
<h3 class="h3-custom" id="minhas-paginas">
	<em class="fa fa-vcard-o text-success"></em> &nbsp; Ativos
</h3>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Ano</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @anos.each do |ano| %>
      <tr>
        <td><%= ano.ano %></td>
        <td><%= link_to 'Show', ano %></td>
        <td><%= link_to 'Edit', edit_ano_path(ano) %></td>
        <td><%= link_to 'Destroy', ano, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


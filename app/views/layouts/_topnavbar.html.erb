           </button>
        </div>
        
        <div class="navbar-collapse collapse" id="topnavbar">
        <ul class="nav navbar-nav mr-auto flex-column flex-lg-row">
            
        <% if user_signed_in? %>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle dropdown-toggle-nocaret" href="#dashboard" data-toggle="dropdown">Admin</a>
            <div class="dropdown-menu animated fadeIn">
                <%= link_to carteiras_path, class: 'dropdown-item mb-1' do %>
                     Carteiras
                <% end %>
                <%= link_to ativos_path, class: 'dropdown-item mb-1' do %>
                    Ativos
                <% end %>
                
                <%= link_to corretoras_path, class: 'dropdown-item mb-1' do %>
                    Corretoras
                <% end %>
                <%= link_to tipos_path, class: 'dropdown-item mb-1' do %>
                     Tipos
                <% end %>
                <%= link_to estados_path, class: 'dropdown-item mb-1' do %>
                     Status
                <% end %>
                <%= link_to investimentos_path, class: 'dropdown-item mb-1' do %>
                     Investimentos
                <% end %>
                <%= link_to ativo_moves_path, class: 'dropdown-item mb-1' do %>
                     Mov. de Ativos
                <% end %>
                
                <%= link_to vencimentos_path, class: 'dropdown-item mb-1' do %>
                     Venc. dos Derivativos
                <% end %>
            </div>
        </li>
        <% end %>
        </ul>
           <ul class="navbar-nav flex-row">
              <% if(!user_signed_in?) %>
                  <li class="nav-item">
                      <%= link_to new_user_session_path, class: 'button-upgrade' do %>
                          <button class="btn btn-outline-custom btn-lg btn-custom-nav" type="button" data-toggle="modal" data-target="#myModal">
                             <em class="fa fa-lock fa-lg"></em> &nbsp; Login 
                          </button>
                      <% end %>
                  </li>
              <% else %>
                    <li class="nav-item">
                        <%= link_to pages_onde_investir_puts_path, class: 'nav-link nav-link-custom' do %>
                             Alocação de Puts
                        <% end %>
                        
                    </li>
                    <li class="nav-item">
                        <%= link_to deriva_moves_path, class: 'nav-link nav-link-custom' do %>

                                     <div class="media">
                                        <div class="align-self-start mr-2">
                                           <em class="fa fa-sign-out fa-2x text-warning"></em>
                                        </div>
                                        <div class="media-body">
                                          <%= link_to destroy_user_session_path, method: :delete do %>
                                            <p class="m-0">Sair</p>
                                            <p class="m-0 text-muted text-sm">Fazer Logout </p>
                                          <% end %>
                                        </div>
                                     </div>

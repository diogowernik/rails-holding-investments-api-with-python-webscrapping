<p id="notice"><%= notice %></p>

<h1>Portfolio Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Portfolio</th>
      <th>Stock</th>
      <th>Shares amount</th>
      <th>Share cost</th>
      <th>Total cost</th>
      <th>Total today</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolio_stocks.each do |portfolio_stock| %>
      <tr>
        <td><%= portfolio_stock.category %></td>
        <td><%= portfolio_stock.portfolio %></td>
        <td><%= portfolio_stock.stock %></td>
        <td><%= portfolio_stock.shares_amount %></td>
        <td><%= portfolio_stock.share_cost %></td>
        <td><%= portfolio_stock.total_cost %></td>
        <td><%= portfolio_stock.total_today %></td>
        <td><%= link_to 'Show', portfolio_stock %></td>
        <td><%= link_to 'Edit', edit_portfolio_stock_path(portfolio_stock) %></td>
        <td><%= link_to 'Destroy', portfolio_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

